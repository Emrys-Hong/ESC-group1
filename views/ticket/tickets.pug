doctype html
html(lang='en')
  include ../common/head.pug
  +head("Tickets")
  body
    header
      include ../common/navbar.pug
      +navbar()

      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5

            h1 Tickets
            table.table
                thead
                    tr
                        th(scope='col') Topic
                        th(scope='col') Date created
                        th(scope='col') Date updated
                        th(scope='col') Details
                        th(scope='col') Delete
                    tr
                tbody
                    for ticket in tickets
                        tr(id=ticket.id)
                            td
                                span #{ticket.topic}
                            td
                                span #{ticket.createdAt}
                            td
                                span #{ticket.updatedAt}
                            td
                                a(href='/ticket/' + ticket.id) Details
                            td
                                button(onclick=`deleteTicket('${ticket.id}')`) Delete
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/tickets.js')

  
